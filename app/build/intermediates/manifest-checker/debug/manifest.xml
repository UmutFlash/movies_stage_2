<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.umut.popular_movies_stage_1"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="23"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.umut.popular_movies_stage_1.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.umut.popular_movies_stage_1.DetailsViewActivity"
            android:label="@string/movie_details"
            android:parentActivityName="com.example.umut.popular_movies_stage_1.MainActivity" >
        </activity>

        <provider
            android:name="com.example.umut.popular_movies_stage_1.FavoritesContentProvider"
            android:authorities="com.example.umut.popular_movies_stage_1"
            android:exported="false" />
        <provider
            android:name="com.squareup.picasso.PicassoProvider"
            android:authorities="com.example.umut.popular_movies_stage_1.com.squareup.picasso"
            android:exported="false" />
        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.example.umut.popular_movies_stage_1.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>